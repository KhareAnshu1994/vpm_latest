
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12 p-0">
    <ul class="nav">
        <li class="nav-item"> <a class="nav-link text-dark" href="javascript:void(0);"><strong>Statistics</strong></a> </li>
        <li class="nav-item"> <a class="nav-link" href="/Rating/Item/0">Rating Master</a> </li>
    </ul>
    <hr class="m-0">
</div>
<article class="col-md-12">
    <div class="pt-3">
        <div class="mb-4"> <a href="/Rating/Item/0" class="btn btn-secondary float-right ml-1">+</a></div>
    </div>
</article>
<br />
<div ng-app="myApp" ng-controller="RatingList">
    <div style="overflow:auto">
        <table class="table table-hover table-bordered">
            <thead>
                <tr style="background-color:darkgrey">
                    <th>SrNo</th>
                    <th>Period</th>
                    @*<th>Name</th>*@
                    <th>Rating_Code</th>
                    <th>Rating_Name</th>
                    <th>Rating_Value</th>
                    <th>IsActive</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in Rating_grid_data">
                    <td>{{$index+1}}</td>
                    <td><a href="/Rating/Item/{{item.ID}}">{{item.Code}}</a></td>
                    @*<td>{{item.Name}}</td>*@
                    <td>{{item.Rating}}</td>
                    <td>{{item.Rating_Name}}</td>
                    <td>{{item.Rating_value}} </td>
                    <td>{{item.IsActive}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>