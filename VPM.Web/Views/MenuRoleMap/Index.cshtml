
@{
    ViewBag.Title = "Role Menu Mapping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-12 p-0">
    <ul class="nav">
        <li class="nav-item"> <a class="nav-link text-dark" href="javascript:void(0);"><strong>Statistics</strong></a> </li>
        <li class="nav-item"> <a class="nav-link" href="#">Role Menu Mapping</a> </li>
    </ul>
    <hr class="m-0">
</div>

<br />
<form class="form-inline" ng-controller="roleMenuMapping" ng-app="myApp">

    <div class="form-group col-md-12 mb-2">
        <label>Role</label>
        <select ng-model="RoleID" ng-options="item.ID as item.Name for item in rolelist" class="form-control col-md-2"></select>
    </div>
    <br />
    <div class="col-sm-3">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>SrNo.</th>
                    <th>Select</th>
                    <th>Menu</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in menus_list">
                    <td>{{$index+1}}</td>
                    <td><input type="checkbox" ng-checked="item.select_status" ng-model="item.select_status" ng-change="CheckboxActivity($index,item.select_status)" /></td>
                    <td>{{item.title}}</td>
                </tr>
            </tbody>
        </table>
        @*<div class="form-check">
                <input class="form-check-input" type="checkbox">
                <label class="form-check-label" for="gridCheck1">
                        Process Of Record
                    </label>
            </div>*@
        <div class="form-group row">
            <div class="col-sm-5">
                <button type="submit" class="btn btn-primary" ng-click="save(menus_list,RoleID)">Submit</button>
            </div>
        </div>
    </div>


</form>




